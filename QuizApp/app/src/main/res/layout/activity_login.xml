<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    android:background="#065CAE"
    android:gravity="center_horizontal">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quizTitleText"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:fontFamily="@font/abel_font"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowRadius="40"
            android:text="Knowledge+"
            android:textColor="#70D0FB"
            android:textSize="50dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="195dp"
            android:layout_height="174dp"
            android:paddingBottom="15dp"
            android:src="@drawable/knowledge_pic" />

        <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#70BEFB"
            android:shadowColor="#000000"
            android:shadowRadius="20"
            android:gravity="center"
            android:fontFamily="@font/abel_font"
            android:text="Enter Username:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:paddingStart="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/abel_font"
            android:layout_marginBottom="15dp"
            android:hint=" Username"/>

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abel_font"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowRadius="20"
            android:text="Enter Password:"
            android:textColor="#70BEFB"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/abel_font"
            android:background="@drawable/rounded_edittext"
            android:paddingStart="3dp"
            android:hint=" Password"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4753FC"
        android:fontFamily="@font/abel_font"
        android:textSize="18sp"
        android:text="LOGIN"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/registerTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:shadowColor="#000000"
            android:textSize="20sp"
            android:shadowRadius="8"
            android:paddingLeft="2dp"
            android:fontFamily="@font/abel_font"
            android:text="Register Here!"
            android:textColor="#95FB70"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>