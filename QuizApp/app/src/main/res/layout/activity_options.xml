<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_options"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#065CAE">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1D329F"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/chooseCategoryTitleText"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="180dp"
                android:fontFamily="@font/abel_font"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="Pick Category:"
                android:textColor="#70BEFB"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <Spinner
            android:id="@+id/chooseCategory"
            android:layout_width="249dp"
            android:layout_height="26dp"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/abel_font"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.975"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chooseDifficultyTitleText"
            android:layout_width="117dp"
            android:layout_height="27dp"
            android:layout_marginTop="230dp"
            android:fontFamily="@font/abel_font"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:text="Pick Difficulty:"
            android:textColor="#70BEFB"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/chooseDifficulty"
        android:layout_width="139dp"
        android:layout_height="27dp"
        android:textAlignment="textEnd"
        android:layout_marginTop="230dp"
        android:fontFamily="@font/abel_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chooseTypeTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/abel_font"
        android:gravity="center"
        android:text="Pick Type:"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:textColor="#70BEFB"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/chooseType"
            android:layout_width="219dp"
            android:layout_height="27dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/abel_font"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chooseAmountTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/abel_font"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:text="Pick Amount of Questions:"
        android:textColor="#70BEFB"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/chooseAmount"
        android:layout_width="88dp"
        android:layout_height="29dp"
        android:layout_marginTop="325dp"
        android:textAlignment="textEnd"
        android:fontFamily="@font/abel_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.984"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addToQueueButton"
        android:layout_width="132dp"
        android:layout_height="47dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/abel_font"
        android:textStyle="bold"
        android:text="Add Quiz to Queue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startQuizButton"
        android:layout_width="241dp"
        android:layout_height="61dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/home_page_play_button"
        android:fontFamily="@font/abel_font"
        android:text="Start Quiz"
        android:textSize="30dp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewQueueButtonFromOptions"
        android:layout_width="128dp"
        android:layout_height="47dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/abel_font"
        android:textStyle="bold"
        android:text="View Queue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/customizeQuizTitle"
        android:layout_width="317dp"
        android:layout_height="50dp"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/abel_font"
        android:shadowColor="#000000"
        android:shadowRadius="20"
        android:text="Customize Your Quiz"
        android:textColor="#70D0FB"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>