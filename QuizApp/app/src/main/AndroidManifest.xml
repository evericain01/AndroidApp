<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp">
        <activity android:name=".Controllers.ModifyProfileActivity" />
        <activity android:name=".Controllers.ViewAllOptionsActivity" />
        <activity android:name=".Controllers.TrueOrFalseQuizActivity" />
        <activity android:name=".Controllers.QuizActivity" />
        <activity android:name=".Controllers.QueueActivity" />
        <activity
            android:name=".Controllers.HomePageActivity"
            android:theme="@style/Theme.QuizApp.NoActionBar" />
        <activity android:name=".Controllers.ProfileCreationActivity" />
        <activity android:name=".Controllers.OptionsActivity" />
        <activity android:name=".Controllers.RegistrationActivity" />
        <activity android:name=".Controllers.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>